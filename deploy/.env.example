# SpeedFog Racing - Production environment
# Copy to /opt/speedfog-racing/.env and fill in values

# Database
DATABASE_URL=postgresql+asyncpg://speedfog:CHANGEME@localhost/speedfog_racing

# Twitch OAuth (https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=https://racing.speedfog.example/api/auth/callback

# App
SECRET_KEY=  # python3 -c "import secrets; print(secrets.token_urlsafe(32))"
OAUTH_REDIRECT_URL=https://racing.speedfog.example/auth/callback
WEBSOCKET_URL=wss://racing.speedfog.example
CORS_ORIGINS=["https://racing.speedfog.example"]

# Seeds
SEEDS_POOL_DIR=/data/SpeedFog/racing/seeds/standard
SEED_PACKS_OUTPUT_DIR=/data/SpeedFog/racing/seed_packs

# Logging
LOG_LEVEL=INFO
