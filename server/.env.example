# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/speedfog_racing

# Twitch OAuth (get from https://dev.twitch.tv/console)
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret
TWITCH_REDIRECT_URI=http://localhost:8000/api/auth/callback

# App
SECRET_KEY=change-this-to-a-secure-random-string
OAUTH_REDIRECT_URL=http://localhost:5173/auth/callback
WEBSOCKET_URL=ws://localhost:8000
CORS_ORIGINS=["http://localhost:5173","http://localhost:8000"]

# Seeds
SEEDS_POOL_DIR=/data/seeds
SPEEDFOG_PATH=/path/to/speedfog

# Discord integration (optional — see docs/DISCORD_BOT.md)
# Webhook for race notifications
DISCORD_WEBHOOK_URL=
BASE_URL=https://speedfog.malenia.win

# Discord bot (optional — enables scheduled events + runner role)
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
DISCORD_RUNNER_ROLE_ID=
DISCORD_PUBLIC_KEY=
DISCORD_CHANNEL_ID=

# Server
LOG_LEVEL=INFO
LOG_JSON=false
